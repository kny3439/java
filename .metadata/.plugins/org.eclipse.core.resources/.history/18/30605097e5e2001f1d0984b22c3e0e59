package baeckjoon;

import java.util.Scanner;

public class Problem1193 {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		
		int a=sc.nextInt();
		int sum=0;
		int bunja = 0;
		int bunmo = 0;
		for(int i=1; ; i++) {
			sum += i;
			if(sum>=a) {
				System.out.println(i);
				System.out.println(sum);
				break;
			}
		}
		
	}
}
